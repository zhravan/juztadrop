# Environment
NODE_ENV=development
# Options: development, production
# - development: Enables Swagger, continues on migration errors
# - production: Disables Swagger, exits on migration errors

# Database (individual parameters - preferred)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=justadrop

# Database URL (optional - will be constructed from above if not provided)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/justadrop

# Database Migrations
RUN_MIGRATIONS=true
# Set to 'false' to skip migrations on startup
# Useful when running migrations separately (e.g., init container, migration job)
# Default: true

# JWT
JWT_SECRET=your-secret-key-change-in-production
# Generate a strong random secret for production

# Email Configuration with Nodemailer
# For Gmail, you need to use an App Password (not your regular password)
# Enable 2-factor auth and generate an App Password at: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

FROM_EMAIL=your-email@gmail.com
FROM_NAME=JustADrop

# Frontend URL (for email verification links)
FRONTEND_URL=http://localhost:3000

# API
API_PORT=3001
NEXT_PUBLIC_API_URL=http://localhost:3001

# Apps
VIEW_PORT=3000
DASHBOARD_PORT=3002
