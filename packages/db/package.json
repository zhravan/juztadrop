{
  "name": "@justadrop/db",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node && bun run tsc --emitDeclarationOnly",
