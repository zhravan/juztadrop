  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "drizzle-orm": "^0.38.0",
    "postgres": "^3.4.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "drizzle-kit": "^0.31.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
